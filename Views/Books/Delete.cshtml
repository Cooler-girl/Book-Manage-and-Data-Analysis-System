@model BookMS.Models.Book

@{
    ViewData["Title"] = "下架图书";
}

<h1 class="text-center text-muted" style="margin-top:3%">下架</h1>

<h3 class="text-center text-muted" style="margin-top:3%">确认下架?</h3>

<div>
    <hr />
    <dl class="row justify-content-center align-items-center text-center">

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            书名
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class="col-sm-2">
            图书编号
        </dt>
        <dd class="col-sm-3">
            @Html.DisplayFor(model=>model.BookID)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            分类
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            字数
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Words)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            价格
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            库存
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            出版日期
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.PubDate)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            简介
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Introduce)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            备注
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Remark)
        </dd>
        <dd class="col-sm-3"></dd>
    </dl>
    
    <form asp-action="Delete">
        <table class="table table-hover">
            <input type="hidden" asp-for="BookID" />
            <tr><td class="text-center"><input type="submit" value="确认" class="btn btn-danger" /></td></tr> 
        </table>             
    </form>
     <div align="center" style="margin-top:2%">
            <button onclick="location.href='../../Books/Manage'" class="btn" style="background-color:#CC99CC">返回</button>
      </div>
</div>
