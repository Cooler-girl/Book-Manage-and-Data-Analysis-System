@model BookMS.Models.Author

@{
    ViewData["Title"] = "创建作者";
}

<h1 class="text-center text-muted" style="margin-top:3%">创建</h1>

<hr />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">姓名</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">头像</label>
                <input type="file" class="form-control" name="file" value="选择" accept="image/jpg" />  
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label">性别</label>               
                <select asp-for="Sex" class ="form-control">
                    <option>男</option>
                    <option>女</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">国籍</label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nation" class="control-label">民族</label>
                <input asp-for="Nation" class="form-control" />
                <span asp-validation-for="Nation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthPlace" class="control-label">出生地</label>
                <input asp-for="BirthPlace" class="form-control" />
                <span asp-validation-for="BirthPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthYear" class="control-label">出生年份</label>
                <input asp-for="BirthYear" class="form-control" />
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Introduce" class="control-label">简介</label>
                <input asp-for="Introduce" class="form-control" />
                <span asp-validation-for="Introduce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remark" class="control-label">备注</label>
                <input asp-for="Remark" class="form-control" />
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group text-center" style="margin-top:3%">
                <input type="submit" value="确认" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div align="center" style="margin-top:2%">
    <button onclick="location.href='../../Authors/Manage'" class="btn" style="background-color:#CC99CC">返回</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
