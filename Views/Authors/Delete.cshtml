@model BookMS.Models.Author

@{
    ViewData["Title"] = "删除";
}

<h1 class="text-center text-muted" style="margin-top:3%">删除</h1>

<h3 class="text-center text-muted" style="margin-top:3%">确认删除?</h3>
<div>
    <hr />
    <dl class="row justify-content-center align-items-center text-center">

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            姓名
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            性别
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            国籍
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            民族
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Nation)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            出生地
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.BirthPlace)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            出生年份
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.BirthYear)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            简介
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Introduce)
        </dd>
        <dd class="col-sm-3"></dd>

        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            备注
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Remark)
        </dd>
        <dd class="col-sm-3"></dd>

    </dl>
    
    <form asp-action="Delete">
        <table class="table table-hover">
        <input type="hidden" asp-for="Id" />
        <tr><td class="text-center"><input type="submit" value="删除" class="btn btn-danger" /></td></tr> 
        </table>   
    </form>
    <div align="center" style="margin-top:2%">
         <button onclick="location.href='../../Authors/Manage'" class="btn" style="background-color:#CC99CC">返回</button>
    </div>
</div>
