@using BookMS.Models.ViewModels
@model UserRoleViewModel
@{
    ViewData["Title"] = "设置管理员";
}

<h3>给用户分配角色</h3>
<form role="form" method="post" asp-action="AddRoleToUser">
    <input asp-for="RoleId" type="hidden"/>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label ">用户</label>
        <div class="col-sm-8">
            <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(Model.Users,"Id","UserName"))">
                <option>请选择用户</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary col-sm-1">确定</button>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    
</form>

