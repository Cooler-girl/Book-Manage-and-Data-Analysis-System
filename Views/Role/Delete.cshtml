@model IdentityRole

@{
    ViewData["Title"] = "删除角色";
}

<h1 class="text-center text-muted" style="margin-top:3%">删除角色</h1>

<h3 class="text-center text-muted" style="margin-top:3%">确认删除?</h3>

<div>
    <hr />
    <dl class="row justify-content-center align-items-center text-center">
        <dd class="col-sm-4"></dd>
        <dt class = "col-sm-2">
            角色
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-3"></dd>
    </dl>
    <form asp-action="Delete">
        <table class="table table-hover">
        <input type="hidden" asp-for="Id" />
        <tr><td class="text-center"><input type="submit" value="删除" class="btn btn-danger" /></td></tr> 
        </table>   
    </form>
    <div align="center" style="margin-top:2%">
         <button onclick="location.href='../../Account/Index'" class="btn" style="background-color:#CC99CC">返回</button>
    </div>
</div>