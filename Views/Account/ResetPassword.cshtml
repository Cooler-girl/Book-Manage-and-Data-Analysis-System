@using BookMS.Models.ViewModels
@model ResetPasswordModel
@{
    ViewData["Title"] = "重置密码";
}

<h1 class="text-center text-muted" style="margin-top:3%">@ViewData["Title"]</h1>
<h2 class="text-center text-muted" style="margin-top:3%">重置密码.</h2>
<hr />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form method="post" asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Code" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" disabled />
                <label asp-for="Email" class="form-label">邮箱</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top:2%">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password" class="form-label">请输入密码</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top:2%">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="ConfirmPassword" class="form-label">确认密码</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top:2%">重置</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
