@model BookMS.Models.User

@{
    ViewData["Title"] = "修改用户信息";
}

<h1 class="text-center text-muted" style="margin-top:3%">修改</h1>

<hr />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form id="profile-form" method="post" asp-action="Modify">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label">昵称</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control"/>
                <label asp-for="Email" class="form-label">邮箱</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" />
                <label asp-for="PhoneNumber" class="form-label">电话</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
             <div class="form-group text-center" style="margin-top:3%">
                <input type="submit" value="保存" class="btn btn-primary text-center" />
            </div>
        </form>
    </div>
</div>


<div align="center" style="margin-top:2%">
    <button onclick="location.href='../../Account/Manage'" class="btn" style="background-color:#CC99CC">返回</button>
</div>