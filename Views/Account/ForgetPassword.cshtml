@using BookMS.Models.ViewModels
@model ForgotPasswordModel
@{
    ViewData["Title"] = "忘记密码?";
}

<h1 class="text-center text-muted" style="margin-top:3%">@ViewData["Title"]</h1>
<h2 class="text-center text-muted" style="margin-top:3%">请输入您的邮箱.</h2>
<hr />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form method="post" asp-action="ForgetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email" class="form-label">邮箱</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top:2%">重置密码</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
